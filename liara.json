{
  "platform": "docker",
  "app": "enginner-taskboard",
  "port": 8000,
  "image": "backend",
  "context": "./backend",
  "dockerfile": "Dockerfile",
  "disks": [
    {
      "name": "static-files",
      "mountTo": "/app/staticfiles"
    },
    {
      "name": "media-files",
      "mountTo": "/app/media"
    }
  ],
  "healthCheck": {
    "path": "/api/health/",
    "initialDelaySeconds": 30,
    "periodSeconds": 10
  },
  "buildLocation": "backend"
}
